@using Core.Common;
@using Model.ViewModels;
@using GridMvc.Html;
@model IQueryable<Model.ViewModels.DesignColourConsumptionHeaderViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ControllerName = (string)ViewContext.RouteData.Values["controller"];
    string IndexStatus = (string)ViewBag.IndexStatus;
}
<style type="text/css">



</style>


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-list black" ></span> Design-Colour Consumption List</span>
        </h3>
        <hr style="margin-top:0px;margin-bottom:0px" />

        <div class="panel-info">
            <h4 style="padding:5px 0 0 0;margin:0px">
                @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                @Html.ActionLink(" ", "ChooseType", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-plus toolbar", @title = "Add New", @data_toggle = "tooltip", @data_modal = "" })
                @Html.ActionLink(" ", "Print", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-print toolbar", @title = "Print", @data_toggle = "tooltip" })
                @Html.ActionLink(" ", "Remove", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-trash toolbar", @title = "Delete", @data_toggle = "tooltip", @id = "DeleteRecord", @data_modal = "" })
                @Html.ActionLink(" ", "Report", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-stats toolbar right", @title = "Report", @data_toggle = "tooltip", target = "_blank" })
                @Html.ActionLink(" ", "Index", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })            
                @Html.ActionLink(" ", "Index_Pending", "DesignColourConsumptionHeader", null, new { @class = "glyphicon glyphicon-floppy-open toolbar right", @title = "Pending", @data_toggle = "tooltip" })
                
            </h4>
        </div>
    </div>

    

    <div class="panel-info" style="padding-left:5px;padding-top:2px">

        @Html.Grid(Model).Columns(columns =>
           {
               columns.Add(m => m.BaseProductId, true);
               columns.Add(m => m.ProductGroupId, true);
               columns.Add(m => m.ColourId, true);
               columns.Add(m => m.ProductQualityName, true);
               columns.Add(m => m.ProductGroupName).Sortable(true).Titled("Design").Filterable(true).Sortable(true);
               columns.Add(m => m.ColourName).Sortable(true).Titled("Colour").Filterable(true).Sortable(true);
           }).WithPaging(25).EmptyText("No records found.").Sortable().Filterable().WithMultipleFilters()
    </div>
</div>

<script type="text/javascript">

    $('table.grid-table td').dblclick(function () {
        var $this = $(this);
        var row = $this.closest("tr");
        var editid = row.find('[data-name="BaseProductId"]').text();
        var ProductGroupId = row.find('[data-name="ProductGroupId"]').text();
        var ColourId = row.find('[data-name="ColourId"]').text();
        var ProductQualityName = row.find('[data-name="ProductQualityName"]').text();
        var url = "";
        if (editid != 0)
        {
            url = '@Url.Action("Edit", "DesignColourConsumptionHeader")' + "/" + editid;
        }
        else {
            url = '@Url.Action("Create", "DesignColourConsumptionHeader")' + "/" + ProductGroupId + "?ColourId=" + ColourId + "&ProductQualityName=" + ProductQualityName;
        }
        
        window.location.href = url;
    });

    //To focus on the first element on modal load
    //$('#myModal').on('shown.bs.modal', function () {
    //    $("#Reason").focus();
    //});

    $('a#DeleteRecord').click(function (e) {        
        var $row = $('table.grid-table .grid-row.grid-row-selected');        
        var editiiid = $row.find('[data-name="BaseProductId"]').text();
        if (!$('table.grid-table .grid-row.grid-row-selected').get(0))
        {
            e.stopImmediatePropagation();
            return false;
        }
        var url = '/DesignColourConsumptionHeader/Delete/' + editiiid;
        $(this).attr('href', url);
        return;
    })

    $('a#PrintRecord').click(function () {
        var $row = $('table.grid-table .grid-row.grid-row-selected');
        var editiiid = $row.find('[data-name="BaseProductId"]').text();
        var url = '/DesignColourConsumptionHeader/Print/' + editiiid;
        $(this).attr('href', url);
        return;
    })



</script>