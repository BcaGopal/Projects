@model Model.ViewModel.ProductTypeSettingsViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Post", "ProductTypeSettings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductTypeId)
    @Html.HiddenFor(m => m.ProductTypeSettingsId)
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> @Model.ProductTypeName Settings</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "Index", "ProductType", new { id=ViewBag.id}, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })
                </h4>
            </div>
        </div>
        <div class="panel-info" style="padding-left:15px">
            <div class="form-horizontal">

                @Html.ValidationSummary(true)


                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        1.Applicability Settings
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isApplicableDimension1, "Dimension1", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isApplicableDimension1, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isApplicableDimension1)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isApplicableDimension2, "Dimension2", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isApplicableDimension2, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isApplicableDimension2)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isApplicableDimension3, "Dimension3", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isApplicableDimension3, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isApplicableDimension3)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isApplicableDimension4, "Dimension4", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isApplicableDimension4, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isApplicableDimension4)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr style="margin-bottom:0px" />
                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        2.Mapping Settings
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowMappedDimension1, "Mapped Dimension1", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowMappedDimension1, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowMappedDimension1)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowUnMappedDimension1, "Un-Mapped Dimension2", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowUnMappedDimension1, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowUnMappedDimension1)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowMappedDimension2, "Mapped Dimension2", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowMappedDimension2, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowMappedDimension2)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowUnMappedDimension2, "Un-Mapped Dimension2", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowUnMappedDimension2, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowUnMappedDimension2)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowMappedDimension3, "Mapped Dimension3", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowMappedDimension3, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowMappedDimension3)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowUnMappedDimension3, "Un-Mapped Dimension3", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowUnMappedDimension3, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowUnMappedDimension3)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowMappedDimension4, "Mapped Dimension4", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowMappedDimension4, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowMappedDimension4)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.isShowUnMappedDimension4, "Un-Mapped Dimension4", new { @class = "control-label col-xs-6" })
                                    <div class="col-xs-4" style=" padding-top:4px">
                                        @Html.CheckBoxFor(m => m.isShowUnMappedDimension4, new { @class = "checkbox col-xs-2" })
                                        @Html.ValidationMessageFor(model => model.isShowUnMappedDimension4)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>





                <hr style="margin-bottom:0px" />
                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        3.Caption Settings
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="margin-top:15px">
                                    @Html.LabelFor(model => model.Dimension1Caption, "Dimension1", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.Dimension1Caption, null, new { @class = "form-control col-xs-6 " })
                                        @Html.ValidationMessageFor(m => m.Dimension1Caption)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group" style="margin-top:15px">
                                    @Html.LabelFor(model => model.Dimension2Caption, "Dimension2", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.Dimension2Caption, null, new { @class = "form-control col-xs-6 " })
                                        @Html.ValidationMessageFor(m => m.Dimension2Caption)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Dimension3Caption, "Dimension3", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.Dimension3Caption, null, new { @class = "form-control col-xs-6 " })
                                        @Html.ValidationMessageFor(m => m.Dimension3Caption)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Dimension4Caption, "Dimension4", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.Dimension4Caption, null, new { @class = "form-control col-xs-6 " })
                                        @Html.ValidationMessageFor(m => m.Dimension4Caption)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>





                <hr style="margin-bottom:0px" />
                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        4.Other Settings
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="margin-top:15px">
                                    @Html.LabelFor(model => model.UnitId, "Unit", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.DropDownListFor(model => model.UnitId, new SelectList(ViewBag.UnitList as System.Collections.IEnumerable, "UnitId", "UnitName"), new { @class = "form-control height cusrightnormal " })
                                        @Html.ValidationMessageFor(m => m.UnitId)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">

    $(function () {
        CustomSelectFunction($("#LedgerAccountGroupId"), '/ComboHelpList/GetAccountGroup', '/ComboHelpList/SetSingleAccountGroup', ' ', false, 0);
    });


    var IsSaved = false;
    var ValidationCount = 0;

    $('form').submit(function (event) {

        if (!IsSaved) {
            IsSaved = true;
            return IsSaved;
        }
        else {
            return false;
        }
    });

</script>