@{
    ViewBag.Title = "SendInvites";
}

@using (Html.BeginForm("SendInvites", "UserInvitation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> UserInvitations</span>
                <input type="submit" value="Invite" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />
        </div>
        <div class="panel-info" style="padding-left:15px">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.Label("Emails", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.TextBox("UserEmails", "", new { @class = "form-control col-xs-6 required" })
                                @Html.ValidationMessage("UserEmails", new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="margin-top:15px">
                            @Html.Label("UserType", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.DropDownList("UserType", new SelectList(ViewBag.UserTypeList as System.Collections.IEnumerable), new { @class = "form-control height col-xs-6 required" })
                                @Html.ValidationMessage("UserEmails", new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("UserRole", new { @class = "control-label col-xs-4" })
                            <div class="col-xs-6">
                                @Html.DropDownList("UserRole", new SelectList(ViewBag.UserRoleList as System.Collections.IEnumerable, "Key", "Value"),string.Empty, new { @class = "form-control height col-xs-6 required" })
                                @Html.ValidationMessage("UserRole", new { @class = "has-error" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">

    $("#UserRole").select2();

</script>