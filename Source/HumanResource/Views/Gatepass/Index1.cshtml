@{
    ViewBag.Title = "Gate Pass List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
@*<script src="~/Scripts/DataTables/dataTables.scroller.js"></script>*@
<script src="~/Scripts/DataTables/dataTables.scroller.min.js"></script>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<style type="text/css">
    .DTHidden {
        display: none;
    }

    .TextRight {
        text-align: right;
    }

    .dataTables_scroll {
        font-size: 13px !important;
        line-height: 1;
    }

    table.dataTable tbody td {
        padding: 2px 10px;
    }
</style>
@*<input type="button" id="button" />*@
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-list black"></span>Gate Pass List</span>

        </h3>
        <hr style="margin-top:0px;margin-bottom:0px" />
    </div>



    <div class="panel-info tab" style="padding-left:5px;padding-top:20px">
        @*<input type="checkbox" id="TestCheck" name="checl" /> <span>Select</span>*@
        <table id="example" class="display" cellspacing="0" width="100%">
            <thead style="background: #428bca;color:white">
                <tr>
                    <th>GatePassNo</th>
                    @*<th>Name</th>
                        <th>Remark</th>*@
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var PageLoadFirst = true;
        var Url = "/GatePass/PendingGatePassHeaders/";

        $('#example').dataTable({
            ajax: Url,
            responsive: true,
            scrollY: "300px",
            scrollCollapse: true,
            scroller: true,
            columns: [
                { "data": "DocNo", "width": "100%", "render": function (data, type, row) { return ' <a href="/GatePass/LineDetail?Ids=' + row.GatePassHeaderId + '"  data_modal = "" > ' + data + ' </a>' + '<br>' + row.Name + '<br>' + row.Remark; }, },

                  //{ "data": "Name", "width": "15%" },
                  //{ "data": "ReMark", "width": "95%", "render": function (data, type, row) { return row.Name + '<br>' + row.Remark }, },
            ],
            dom: 'T<"clear">frti',
            TableTools: {
                "sRowSelect": "os",
                "aButtons": [
                "select_all", "select_none"
                ]
            },


        });

    });



</script>