@model IEnumerable<Model.ViewModel.GatePassHeaderViewModel1>


<div class="modal-content">
    <div class="modal-header" style="border-bottom: 1px solid #8E8888">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <span class="glyphicon glyphicon-remove"></span></button>
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span>Line Detail</span>
        </h3>
    </div>
    <div>
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="max-height:400px;overflow-y:scroll;font-size:13px">
            @{
                decimal QtyTotal = 0;
            }
            <div class="panel panel-success">

                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>Product</th>
                                    <th>Unit</th>
                                    <th class="text-right">Qty</th>
                                </tr>
                                @foreach (var item2 in Model.ToList())
                                {
                                    QtyTotal += item2.Qty;
                                    <tr>
                                        <td>@item2.Product</td>
                                        <td>@item2.UnitId</td>
                                        <td class="text-right">@item2.Qty</td>
                                    </tr>
                                }
                                <tfoot>
                                    <tr>
                                        <td><strong>Total</strong></td>
                                        <td></td>
                                        <td class="text-right">@QtyTotal</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>